<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% customers.each do |customer| %>
      <tr>
        <td><%= image_tag customer.get_profile_image(50,50) %></td>
        <td><%= customer.name %></td>
        <td>フォロー数: <%= customer.followings.count %></td>
        <td>フォロワー数: <%= customer.followers.count %></td>
        <td><%= render "admin/relationships/btn", customer: customer, options: { class: "follow-link" } %></td>
        <td><%= link_to "Show", customer %></td>
      </tr>
    <% end %>
  </tbody>
</table>
