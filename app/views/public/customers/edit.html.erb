<div>
  <%= link_to :back do %>
    <i class="fa-solid fa-arrow-left fa-xl" style="color: #000;"></i>
  <% end %>
</div>
<h2>プロフィール編集画面</h2>

<%= form_with model: @customer, url: information_update_path do |f| %>

  <h4>プロフィール画像</h4>
  <%= f.file_field :profile_image, accept: "image/*" %>

  <h4>ユーザーネーム</h4>
  <%= f.text_field :name %>

  <h4>自己紹介文</h4>
  <%= f.text_area :profile_text %>

  <%= f.submit "変更を保存" %>

  <%= link_to "退会する", confirm_withdraw_path %>

<% end %>