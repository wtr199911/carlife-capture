<div class="container">
  <div class="back-list mx-auto mt-5" style="width: 50%;">
  <h2 class="m-3 text-center">タグが "<%=@tag.name%>" の投稿一覧</h2>

    <!--タグリスト-->
    <div class="d-flex justify-content-center my-4">
    <% @tag_list.each do |list|%>
      <i class="fa-sharp fa-solid fa-tag"></i>
      <%=link_to list.name,search_tag_path(tag_id: list.id) %>
      <%="(#{list.posts.count})" %>
    <% end %>
    </div>
  </div>

  <div><%= render "public/posts/index", posts: @posts, post_page: @posts %></div>
</div>