<h2>タグが<%=@tag.name%>の投稿一覧</h2>

  <!--タグリスト-->
  <div class="d-flex">
  <% @tag_list.each do |list|%>
    <i class="fa-sharp fa-solid fa-tag"></i>
    <%=link_to list.name,search_tag_path(tag_id: list.id) %>
    <%="(#{list.posts.count})" %>
  <% end %>
  </div>

  <%= render "public/posts/list", posts: @posts %>
