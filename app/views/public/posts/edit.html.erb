<div>
  <%= link_to :back do %>
    <i class="fa-solid fa-arrow-left fa-xl" style="color: #000;"></i>
  <% end %>
</div>
<h2>投稿編集画面</h2>

<%= form_with model: @post do |f| %>

 <h4>画像</h4>
 <%= f.file_field :image, accept: "image/*" %>

 <h4>タイトル</h4>
 <%= f.text_field :title, placeholder: "" %>

 <h4>投稿文</h4>
 <%= f.text_area :detail %>

 <h4>撮影場所</h4>
 <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name,{include_blank: "---"} ) %>
 <%= f.text_field :place, placeholder: "撮影場所を記入して下さい" %>

 <label>タグ(,で区切ると複数タグ登録できます)</label>
 <%= f.text_field :name,value: @tag_list, class: "form-control", placeholder: "山,見晴らしがいい" %>

 <%= f.submit "変更を保存" %>

<% end %>