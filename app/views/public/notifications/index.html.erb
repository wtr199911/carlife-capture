
<div class="container mt-5 mx-auto">
  <h4 class="text-center">通知一覧</h4>
  <% if @notifications.present? %>
    <%= link_to "全削除",notifications_path(@notifications), method: :delete,class: "btn btn-light" %>
    <% @notifications.each do |notification| %>
      <%= render "#{notification.action_type}", notification: notification %>
    <% end %>
  <% else %>
    <p class="text-center">通知はありません</p>
  <% end %>
</div>