<%= render "public/shared/error_messages", resource: resource %>
<div class = "container">
	<div class="wrapper my-5">
		<div class="form form-signin">
    <%= form_with model: @customer, url: customer_registration_path, method: :post do |f| %>

		    <h3 class="form-signin-heading">Welcome! Sign up</h3>
			  <hr class="colorgraph"><br>

        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "User name" %>

        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "sample@example.com" %>

        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password(6文字以上)" %>
    　　　<%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Password(確認用)" %>

			  <div class="mx-3 mt-4 text-center">
          <%= f.submit "新規登録", class: "btn btn-outline-primary"%>
        </div>

			  <h5 class="mt-5 text-center">ゲストログインはこちらから</h5>
        <div class="col mb-3 mt-3 text-center">
          <%= link_to "ゲストログイン（閲覧用）", users_guest_sign_in_path, class: "btn btn-secondary", method: :post %>
        </div>

    <% end %>
		</div>
	</div>
</div>