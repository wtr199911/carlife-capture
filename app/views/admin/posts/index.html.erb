<h3>投稿一覧</h3>
<% @posts.each do |post| %>
  <div>
    <%= link_to post_path(post.id) do %>
      <%= image_tag post.get_image(160, 120) %><br>
      <%= post.title %><br>
      <%= post.detail %><br>
    <% end %>
    <%= post.prefecture.name %>
    <%= post.customer.name %>
    <%= render "favorites/btn", post: post %>
  </div>
<% end %>