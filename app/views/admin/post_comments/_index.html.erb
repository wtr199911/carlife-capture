 <div class="comment-index my-5">
   <h4 class="text-center my-3">コメント一覧</h4>
   <hr style="border-top: 1px solid #C0C0C0;">
  <div class="<%= "scroll-contents" if post.post_comments.count > 5 %>">
    <% post.post_comments.each do |post_comment| %>
      <div class="balloon5">
        <div class="faceicon text-center">
          <%= link_to customer_path(post_comment.customer) do %>
            <%= image_tag post_comment.customer.get_profile_image(100,100), class: "w-75" %>
            <div class="like-link"><%= post_comment.customer.name %></div>
          <% end %>
        </div>
        <div class="chatting">
          <div class="says">
            <div class=""><%= simple_format(post_comment.comment, class: "comment-user") %></div>
          </div>
            <div class="mt-2">
             <div class="comment-option">
              <div class ="time"><%= l post_comment.created_at %></div>
              <% if post_comment.customer == current_customer %>
                <%= link_to  post_post_comment_path(post, post_comment), class: "comment-delete", method: :delete, remote: true do %>
                <i class="fa-solid fa-trash-can"></i>
                <% end %>
              <% end %>
              <% if admin_signed_in? %>
                <%= link_to  post_post_comment_path(post, post_comment), class: "comment-delete", method: :delete, remote: true do %>
                <i class="fa-solid fa-trash-can"></i>
                <% end %>
              <% end %>
             </div>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>