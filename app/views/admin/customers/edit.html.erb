<div class="container mt-3">

  <h4 class="font-weight-bold mb-5 text-center"><%= @customer.name %>さんの会員情報</h4>
  <div class="row justify-content-center">
    <h5 class="font-weight-bold mb-3 ml-3">会員ID</h5>
    <p class="font-weight-bold mb-3 ml-3"><%= @customer.id %></p>
  </div>
  <%= form_with model: [:admin, @customer] do |f| %>
  <div class="d-flex">
    <div class="m-5 col-5 text-center">
      <%= f.file_field :profile_image, accept: "image/*"%><br>
    </div>

    <div class="col-5 pt-5">
      <table class="table table-borderless">
        <tr>
          <th>name</th>
          <td class="text-center"><%= f.text_field :name, autofocus: true %></td>
        </tr>
        <tr>
          <th>information</th>
          <td><%= f.text_area :profile_text, rows:'5', autofocus: true, class: "w-100" %></td>
        </tr>
        <tr>
          <th>Email</th>
          <td><%= f.text_field :email, autofocus: true, class: "w-100" %></td>
        </tr>
        <tr>
          <th>status</th>
          <td class="text-center">
            <%= f.radio_button :is_valid, :true, class: "mr-2" %>
            <%= f.label :is_valid, "有効", value: true, class: "text-success mr-2" %>

            <%= f.radio_button :is_valid, :false, class: "mr-2" %>
            <%= f.label :is_valid, "退会", value: false, class: "text-danger mr-2" %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <div class="m-5"><%= f.submit "変更を保存", class: "btn btn-outline-success" %></div>
  </div>
  <% end %>
</div>