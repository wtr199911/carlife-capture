<div>
  <%= link_to :back do %>
    <i class="fa-solid fa-arrow-left fa-xl" style="color: #000;"></i>
  <% end %>
</div>
<div class="container mt-3">

  <h4 class="font-weight-bold mb-5"><%= @customer.name %>さんの会員情報</h4>
  <div class="row">
    <h5 class="font-weight-bold mb-3 ml-3">会員ID</h5>
    <p class="font-weight-bold mb-3 ml-3"><%= @customer.id %></p>
  </div>
  <%= form_with model: [:admin, @customer] do |f| %>
    <div class="row mb-3">
      <%= f.label "名前", class: "col-lg-2 col-md-3 col-sm-4 mb-3" %>
      <%= f.text_field :name, autofocus: true, class: "col-lg-3 col-md-3 mx-2" %>
    </div>

    <div>
      <%= f.label "紹介文", class: "col-lg-2 col-md-3 col-sm-4 mb-3" %>
      <%= f.text_area :profile_text, autofocus: true, class: "col-lg-3 col-md-3 mx-2" %>
    </div>
     
    <div>
      <%= f.label "メールアドレス", class: "col-lg-2 col-md-3 col-sm-4 mb-3" %>
      <%= f.text_field :email, autofocus: true, class: "col-lg-3 col-md-3 mx-2" %>
    </div> 

    <div class="row">
      <h5 class="font-weight-bold ml-3 mr-3">会員ステータス</h5>
      <%= f.radio_button :is_valid, :true, class: "mr-2" %>
      <%= f.label :is_valid, "有効", value: true, class: "text-success mr-2" %>

      <%= f.radio_button :is_valid, :false, class: "mr-2" %>
      <%= f.label :is_valid, "退会", value: false, class: "text-danger mr-2" %>
    </div>

    <div class="d-flex justify-content-center">
      <%= f.submit "変更を保存", class:"btn btn-outline-primary mb-3" %>
    </div>
  <% end %>
</div>